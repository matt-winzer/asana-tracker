<div class="row">
    <div class="col s10 offset-s1">
        <div class="card blue-grey darken-1">
            <div class="center-align card-content white-text">
                <span class="card-title">Add An Asana</span>
            </div>
        </div>
    </div>
</div>

<div class="row">
   <form class="col s12" action="/" method="post">
     <div class="row">
       <div class="input-field col s6">
         <input name="name" id="name" type="text" class="validate">
         <label for="name">Name</label>
       </div>
       <div class="input-field col s6">
         <input name="primary_target" id="primary_target" type="text" class="validate">
         <label for="primary_target">Primary Target</label>
       </div>
     </div>
     <div class="row">
       <div class="input-field col s6">
         <input name="duration" id="duration" type="number" min="0" max="30" class="validate">
         <label for="duration">Duration</label>
       </div>
       <div class="input-field col s6">
         <input name="difficulty" id="password" type="number" min="1" max="5" class="validate">
         <label for="difficulty">Difficulty</label>
       </div>
     </div>
     <button type="submit">Submit New Asana</button>
   </form>
 </div>

<div class="row">
    <div class="col s10 offset-s1">
        <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <span class="card-title">Asanas For Days</span>
                <p>Welcome to your own personal Yoga Asana database! Here are the Asana's that are currently in the database</p>
                <a href="/new" class="waves-effect waves-light btn-large">Add an Asana</a>
            </div>
        </div>
    </div>
</div>


<table class="striped">
    <thead>
        <tr>
            <th data-field="id">ID</th>
            <th data-field="name">Name</th>
            <th data-field="primary_target">Primary Target</th>
            <th data-field="duration">Duration (Mins)</th>
            <th data-field="difficulty">Difficulty (/5)</th>
        </tr>
    </thead>
    <tbody>
        {{#each asanas}}

            <tr class="main-table-row" data-id="{{this.id}}">
                <td>{{this.id}}</td>
                <td><a href="/{{this.id}}">{{this.name}}</a></td>
                <td>{{this.primary_target}}</td>
                <td>{{this.duration}}</td>
                <td>{{this.difficulty}}</td>
            </tr>

        {{/each}}
    </tbody>
</table>
